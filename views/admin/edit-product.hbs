<section>
  <div class="container">
    <div class="row mt-5">
      <div class="col-md-6">
        <h2 class="text-center">Edit product</h2>
        <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
          <label for="name">Name</label>
          <input type="text" value="{{product.Name}}" name="Name" class="form-control">

          <label for="">Category</label>
          <input type="text" value="{{product.Category}}" name="Category" class="form-control">

          <label for="">Price</label>
          <input type="text" value="{{product.Price}}" name="Price" class="form-control">

          <label for="">Description</label>
          <input type="text" value="{{product.Description}}" name="Description" class="form-control">

          <label for="">Image</label>
          <img src="/product-images/{{product._id}}.jpg" style="width: 100px; height:auto;" alt="" >
          <input type="file" name="image" class="form-control" >

          <button type="submit" class="btn btn-success mt-4">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>