<section>
  <div class="container">
   <div class="row justify-content-end">
    <div class="col-auto">
    <a href="/admin/add-product" ><button class="btn btn-success mt-5">Add Products</button></a>
    </div>
    </div>
    <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      
    </tr>
  </thead>
  <tbody>
    {{#each data}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td>{{this.Price}}</td>
      <td><img style="width: 50px;height:50px;" src="/product-images/{{this._id}}.jpg" alt=""> </td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-danger">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-primary" onclick="return confirm('Are you sure want to delete {{this.Name}}')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
  </div>
</section>